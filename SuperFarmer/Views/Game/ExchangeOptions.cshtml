@model SuperFarmer.Models.Game
@{
    var ownedAnimal = (SuperFarmer.Models.Animal)ViewBag.OwnedAnimal;
    var exchanges = ViewBag.Exchanges as List<Tuple<SuperFarmer.Models.Animal, int>>;
}

<div class="container mt-4">
    <h2 class="mb-4">Możliwe wymiany za @ownedAnimal</h2>

    @if (!exchanges.Any())
    {
        <div class="alert alert-warning">
            <strong>Brak dostępnych wymian.</strong> Nie posiadasz wystarczającej liczby zwierząt.
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark">
            <tr>
                <th>Otrzymujesz</th>
                <th>Koszt</th>
                <th>Akcja</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var ex in exchanges)
            {
                <tr>
                    <td>
                        <img src="@Model.GetAnimalImagePath(ex.Item1)" width="40" />
                        <br />
                        @ex.Item1
                    </td>
                    <td>
                        @ex.Item2 ×
                        <img src="@Model.GetAnimalImagePath(ownedAnimal)" width="40" />
                        <br />
                        @ownedAnimal
                    </td>
                    <td>
                        <form asp-action="MakeExchange" method="post">
                            <input type="hidden" name="targetAnimal" value="@ex.Item1" />
                            <button class="btn btn-success btn-sm">Potwierdź</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }

    <div class="text-center mt-4">
        <a asp-action="Play" class="btn btn-secondary">⬅️ Wróć do gry</a>
    </div>
</div>