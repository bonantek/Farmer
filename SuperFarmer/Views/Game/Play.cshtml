@model SuperFarmer.Models.Game

<h2>Tura: @Model.CurrentRound</h2>
<h3>Kolej gracza: @Model.CurrentPlayer.Index</h3>

@if (Model.LastRoll != null)
{
<p><strong>Wylosowane zwierzeta:</strong> @Model.LastRoll.Value.Item1 i @Model.LastRoll.Value.Item2</p>
}

@if (TempData["Error"] != null)
{
<div class="alert alert-danger" role="alert">
    @TempData["Error"]
</div>
}

<h4>Twoje zwierzÄ™ta:</h4>

<table class="table table-bordered table-striped w-100">
    <thead class="table-dark">
    <tr>
        <th style="width: 20%">Obraz</th>
        <th style="width: 25%">ZwierzÄ™</th>
        <th style="width: 20%">IloÅ›Ä‡</th>
        <th style="width: 35%">Akcje</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var animal in Model.CurrentPlayer.Animals)
    {
    <tr>
        <td>
            <img src="@Model.GetAnimalImagePath(animal.Key)" alt="@animal.Key" width="40" />
        </td>
        <td>@animal.Key</td>
        <td>@animal.Value</td>
        <td>
            @if (!Model.DiceRolledThisTurn)
            {
                <form asp-action="ShowExchangeOptions" method="get" style="display:inline;">
                    <input type="hidden" name="animal" value="@animal.Key" />
                    <button class="btn btn-sm btn-outline-secondary">WymieÅ„</button>
                </form>
                <form asp-action="ShowTradesWithPlayers" method="get" style="display:inline;">
                    <input type="hidden" name="animal" value="@animal.Key" />
                    <button class="btn btn-sm btn-outline-secondary">WymieÅ„ z innym graczem</button>
                </form>

            }
            else
            {
            <span class="text-muted">Nie moÅ¼esz zrobiÄ‡ Å¼adnej akcji</span>
            }
        </td>
    </tr>
    }

    </tbody>
</table>

<h4>ZwierzÄ™ta dostÄ™pne w banku:</h4>

<table class="table table-bordered w-50">
    <thead class="table-light">
    <tr>
        <th style="width: 20%">Obraz</th>
        <th style="width: 50%">ZwierzÄ™</th>
        <th style="width: 30%">IloÅ›Ä‡</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var animal in Model.Bank)
    {
    <tr>
        <td>
            <img src="@Model.GetAnimalImagePath(animal.Key)" alt="@animal.Key" width="40" />
        </td>
        <td>@animal.Key</td>
        <td>@animal.Value</td>
    </tr>
    }

    </tbody>
</table>




@if (!Model.DiceRolledThisTurn)
{
    <form asp-action="RollDice" method="post">
        <button type="submit">ðŸŽ² Roll</button>
    </form>
}



@if (Model.DiceRolledThisTurn)
{
    <form asp-action="NextTurn" method="post">
        <button type="submit">Next player</button>
    </form>
}

<div class="modal fade" id="rollResultModal" tabindex="-1" aria-labelledby="rollResultLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-center">
            <div class="modal-header">
                <h5 class="modal-title w-100" id="rollResultLabel">WylosowaÅ‚eÅ›:</h5>
            </div>
            <div class="modal-body">
                @if (Model.LastRoll != null)
                {
                    var (a1, a2) = Model.LastRoll.Value;
                    <div class="d-flex justify-content-center gap-4">
                        <div>
                            <img src="@Model.GetAnimalImagePath(a1)" width="60" />
                            <p>@a1</p>
                        </div>
                        <div>
                            <img src="@Model.GetAnimalImagePath(a2)" width="60" />
                            <p>@a2</p>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-success" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

@if (Model.LastRoll != null && Model.DiceRolledThisTurn)
{
<script>
    window.onload = () => {
        const modal = new bootstrap.Modal(document.getElementById('rollResultModal'));
        modal.show();
    };
</script>
}



