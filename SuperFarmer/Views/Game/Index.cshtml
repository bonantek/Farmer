@{
    ViewData["Title"] = "Nowa gra";
}

<div class="text-center mt-5">
    <h1 class="display-4">SuperFarmer</h1>
    <p class="lead mt-3">
        Witaj w grze SuperFarmer! Hoduj zwierzęta, wymieniaj je z innymi graczami i zostań najlepszym farmerem!
    </p>

    <div class="card mt-4 mx-auto" style="max-width: 400px;">
        <div class="card-body">
            <form asp-action="StartGame" method="post">
                <div class="mb-3">
                    <label for="playerCount" class="form-label"><strong>Wybierz liczbę graczy:</strong></label>
                    <input type="number" name="playerCount" class="form-control form-control-lg text-center" min="2" max="4" required />
                </div>

                <button type="submit" class="btn btn-success btn-lg w-100">Rozpocznij grę</button>
            </form>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3">
                    @ViewData.ModelState.Values.First().Errors.First().ErrorMessage
                </div>
            }
        </div>
    </div>
</div>